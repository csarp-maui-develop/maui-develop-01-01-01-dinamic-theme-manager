<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kreta.Maui.Resources.Themes.Fire">
    
    <Color x:Key="Primary">Red</Color>
    <Color x:Key="PrimaryDark">#A70D2A</Color>
    <Color x:Key="PrimaryDarkText">Maroon</Color>
    <Color x:Key="Secondary">#E41B17</Color>
    <Color x:Key="SecondaryDarkText">#8C001A</Color>
    <Color x:Key="Tertiary">#FF2400</Color>
    <Color x:Key="ButtonBackground">#FF8C00</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
</ResourceDictionary>