<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kreta.Maui.Resources.Themes.Dark">
    <Color x:Key="Primary">#414141</Color>
    <Color x:Key="PrimaryDark">#C1C1C1</Color>
    <Color x:Key="PrimaryDarkText">#B9B9B9</Color>
    <Color x:Key="Secondary">#717171</Color>
    <Color x:Key="SecondaryDarkText">#212121</Color>
    <Color x:Key="Tertiary">#010101</Color>
    <Color x:Key="ButtonBackground">#707070</Color>
    <Color x:Key="PageBackground">#101010</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
</ResourceDictionary>